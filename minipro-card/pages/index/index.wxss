/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.music {
  width: 90rpx;
  height: 90rpx;
  position: relative;
  left: 10rpx;
  top: 10rpx;
  padding: 10rpx;
}
.card-box {
  height: 100%;
  background-size: cover;
  background-position: center;
}
.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0% 10%;
  border: 10px double rgb(210, 162, 169);
  border-radius: 20px;
  padding: 5% 5%;
  /* height: min-content + 25%; */
  /* width: 50%; */
  background-color: rgba(255, 255, 255, 0.7);
  font-family: Arial, Helvetica, sans-serif;
  font-size: larger;
}
.context {
  margin: 5% 0%;
  width: 100%;
}
.btn {
  margin-top: 25%;
  color: #606060;
  border: 5px double rgb(210, 162, 169);
  border-radius: 20px;
  background-color: rgba(255, 255, 255, 0.78);
}
