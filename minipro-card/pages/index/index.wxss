/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.card-box {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-size: cover;
  background-position: center;
}
.top-bar {
  height: 8%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.7);
  margin-bottom: 2%;
}
.music {
  width: 100rpx;
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: row;
}
.userinfo-btn {
  color: #606060;
  border: 1px double rgb(210, 162, 169);
  border-radius: 20px;
  background-color: rgba(255, 255, 255, 0.78);
}
.userinfo-avatar {
  width: 90rpx;
  height: 90rpx;
}
.userinfo-nickname {
  padding: 25rpx 0rpx;
}
.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0% 10%;
  border: 10px double rgb(210, 162, 169);
  border-radius: 20px;
  padding: 5% 5%;
  background-color: rgba(255, 255, 255, 0.7);
  font-family: Arial, Helvetica, sans-serif;
  font-size: larger;
}
.context {
  margin: 5% 0%;
  width: 100%;
}
.btn {
  margin-top: 25%;
  color: #606060;
  border: 5px double rgb(210, 162, 169);
  border-radius: 20px;
  background-color: rgba(255, 255, 255, 0.78);
}
